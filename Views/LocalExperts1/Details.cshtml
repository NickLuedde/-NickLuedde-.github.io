@using GAG_101.Models
@model GAG_101.Models.LocalExperts1

@{
    Layout = Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<!-- Titlebar
================================================== -->
<div class="single-page-header" data-background-image="images/single-company.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="single-page-header-inner">
                    <div class="left-side">
                        <div class="header-details">
                            <h3>
                                @Html.DisplayFor(model => model.Business_Name)
                                <span>
                                    @foreach (var JobType in Model.JobTypes1)
                                    {
                                        <div>@JobType.Name_JobType</div>
                                    }
                                </span>
                            </h3>
                            <ul>
                                <li><div class="star-rating" data-rating=@(Model.AverageRating?.ToString("0.##"))></div></li>
                                <li> @Html.DisplayFor(model => model.Email)</li>
                                <li>  @Html.DisplayFor(model => model.Phone_Number)</li>
                                <li> @Html.DisplayFor(model => model.Location_Zip)</li>
                                <li><div class="verified-badge-with-title">Verified</div></li>
                            </ul>
                        </div>
                    </div>
                    <div class="right-side">
                        <!-- Breadcrumbs -->
                        <nav id="breadcrumbs" class="white">
                            <ul>
                                <li><a href="#">Home</a></li>
                                <li><a href="#">Browse Companies</a></li>
                                <li>@Html.DisplayFor(model => model.Business_Name)</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page Content
================================================== -->
<div class="container">
    <div class="row">

        <!-- Content -->
        <div class="col-xl-8 col-lg-8 content-right-offset">
            
            <!-- Boxed List -->
            <div class="boxed-list margin-bottom-60">
                <div class="boxed-list-headline">
                    <h3><i class="icon-material-outline-thumb-up"></i> Reviews</h3>
                </div>
                <ul class="boxed-list-ul">
                <li>
                    <div class="boxed-list-item">
                        <!-- Content -->
                        <div class="item-content">
                            @Html.Action("Index", "UserReviews1", new { id = Model.LocalExpert_ID })
                        </div>
                    </div>
                </li>
                </ul>
    </div>
    <!-- Boxed List / End -->
</div>

<!-- Sidebar -->
<div class="col-xl-4 col-lg-4">
    <div class="sidebar-container">

        <!-- Location -->
        

        <!-- Widget -->
        <div class="sidebar-widget">
            <h3>Social Profiles</h3>
            <div class="freelancer-socials margin-top-25">
                <ul>
                    <li><a href="https://www.facebook.com/nick.luedde" title="Facebook" data-tippy-placement="top"><i class="icon-brand-facebook"></i></a></li>
                    <li><a href="https://github.com/NickLuedde" title="GitHub" data-tippy-placement="top"><i class="icon-brand-github"></i></a></li>
                    <li><a href="https://www.linkedin.com/in/nicholas-luedde/" title="linkedin" data-tippy-placement="top"><i class="icon-brand-linkedin"></i></a></li>
                    </ul>
            </div>
        </div>

        <!-- Sidebar Widget -->
        <div class="sidebar-widget">
            <h3>Copy The Link!</h3>
            
            <!-- Copy URL -->
            <div class="copy-url">
                <input id="copy-url" type="text" value="" class="with-border">
                <button class="copy-url-button ripple-effect" data-clipboard-target="#copy-url" title="Copy to Clipboard" data-tippy-placement="top"><i class="icon-material-outline-file-copy"></i></button>
            </div>

            <!-- Share Buttons -->
            <div class="share-buttons margin-top-25">
                <div class="share-buttons-trigger"><i class="icon-feather-share-2"></i></div>
                <div class="share-buttons-content">
                    <span>Love These Experts? <strong style="color: #ffffe7; ">Share!</strong></span>
                    <ul class="share-buttons-icons">
                        <li><a href="https://www.facebook.com/nick.luedde" data-button-color="#3b5998" title="Share on Facebook" data-tippy-placement="top"><i class="icon-brand-facebook-f"></i></a></li>
                        <li><a href="#https://www.gmail.com" data-button-color="#dd4b39" title="Share on Google Plus" data-tippy-placement="top"><i class="icon-brand-google-plus-g"></i></a></li>
                        <li><a href="https://www.linkedin.com/in/nicholas-luedde/" data-button-color="#0077b5" title="Share on LinkedIn" data-tippy-placement="top"><i class="icon-brand-linkedin-in"></i></a></li>
                        <li><a href="https://github.com/NickLuedde" data-button-color="#dd4b39 title="Share on GitHub" data-tippy-placement="top"><i class="icon-brand-github"></i></a></li>
                        </ul>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
</div>

<!-- Spacer -->
<div class="margin-top-15"></div>
<!-- Spacer / End-->
<!-- Wrapper / End -->


<script>

    // Snackbar for "place a bid" button
    $('#snackbar-place-bid').click(function () {
        Snackbar.show({
            text: 'Your bid has been placed!',
        });
    });

    // Snackbar for copy to clipboard button
    $('.copy-url-button').click(function () {
        Snackbar.show({
            text: 'Copied to clipboard!',
        });
    });
</script>

