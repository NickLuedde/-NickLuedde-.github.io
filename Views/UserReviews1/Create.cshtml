@model GAG_101.Models.UserReviews1


<br/>
<br />
<br />
<br />
<br />
@using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(model => model.LocalBusiness_ID)
        @Html.HiddenFor(model => model.LocalExpert_UserID)
        @Html.HiddenFor(model => model.ReviewBody_Date)



        <div class="form-horizontal">
            <h4>@ViewBag.localExpert.Business_Name</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          
    
            <div class="form-group">
                @Html.LabelFor(model => model.FairPrice_Rating, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    How would you rate this Expert's pricing for the task at hand?
                    <select name="FairPrice_Rating" id="FairPrice_Rating" class="form-control">


                        @for (int i = 5; i > 0; i--)
                        {
                            <option value="@i"> @i</option>
                        }

                    </select>

                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.Quality_Rating, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    How would you rate the quality of this Expert's work?
                    <select name="Quality_Rating" id="Quality_Rating" class="form-control">


                        @for (int i = 5; i > 0; i--)
                        {
                            <option value="@i"> @i</option>
                        }

                    </select>

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CompletionTime_Rating, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    How would you rate this Expert's ability to complete their desired task in a timely manner? 
                    <select name="CompletionTime_Rating" id="CompletionTime_Rating" class ="form-control"> 
                    

                        @for (int i = 5; i > 0; i--)
                        {
                            <option value ="@i"> @i</option>
                        }
                    
                    </select>
                    
                </div>
            </div>
         
            <div class="form-group">
                @Html.LabelFor(model => model.Review_Body, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                Please describe your overall experience with this Expert...
                    @Html.TextAreaFor(model => model.Review_Body, new { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.Review_Body, "", new { @class = "text-danger" })
                </div>
            </div>
    
           
            
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
  

